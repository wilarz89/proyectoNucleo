<h1>Nuevo Equipo</h1>

<%= simple_form_for :equipo , url: equipos_path do |f| %>
  <% if @equipo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@equipo.errors.count, "error") %><br> No se pudo guardar el equipo:</h2>
      <ul>
        <% @equipo.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
  <p>
    <%= f.label :Codigo %><br>
    <%= f.text_field :cod_equipo %>
  </p>

  <p>
    <%= f.label :Nombre %><br>
    <%= f.text_field :nom_equipo %>
  </p>

  <p>
    <%= f.label :Promedio %><br>
    <%= f.text_field :porcentaje %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Volver Atras', equipos_path %>
<%= render 'form', equipo: @equipo %>


